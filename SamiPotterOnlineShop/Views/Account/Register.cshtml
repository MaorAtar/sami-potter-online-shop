@using SamiPotterOnlineShop.Data.ViewModels;
@model RegisterVM;

@{
    ViewData["Title"] = "Sign Up";
}

<style>
    body {
        background-image: url('/css/bg.jpg');
        background-size: cover;
        background-repeat: no-repeat;
        position: absolute;
        color: white;
        background-attachment: fixed;
    }
</style>

<div class="container align-text-top text-center" style="font-family: 'Harry Potter', sans-serif; margin-top:8%;">
    <h2>Sign up for a new account</h2>
</div>

<div class="row">
    <div class="col-md-6 offset-3">
        @if (TempData["Error"] != null)
        {
            <div class="col-md-12 alert alert-danger">
                <span>
                    <b>Sorry!</b> - @TempData["Error"]
                </span>
            </div>
        }

        <div class="row" style="border: 1px solid #f5d376;">
            <br />
            <div class="col-md-8 offset-2">
                <form asp-action="Register">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="FullName" class="control-label"></label>
                        <input asp-for="FullName" class="form-control" />
                        <span asp-validation-for="FullName" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="EmailAddress" class="control-label"></label>
                        <input asp-for="EmailAddress" class="form-control" />
                        <span asp-validation-for="EmailAddress" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Password" class="control-label"></label>
                        <input asp-for="Password" class="form-control" />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="ConfirmPassword" class="control-label"></label>
                        <input asp-for="ConfirmPassword" class="form-control" />
                        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                    </div>
                    <br />
                    <div class="card" style="background-color: transparent;">
                        <div class="card-header">
                            <div class="row">
                                <h3 class="text-xs-center">Payment Details</h3>
                                <img class="img-fluid cc-img" src="https://www.prepbootstrap.com/Content/images/shared/misc/creditcardicons.png">
                            </div>
                        </div>
                        <div class="card-block" style="background-color: transparent;">
                                <div class="row">
                                    <div class="col-xs-12">
                                        <div class="form-group">
                                            <label asp-for="CreditCardNumber" class="control-label"></label>
                                            <input id="creditCardNumber" asp-for="CreditCardNumber" class="form-control" />
                                            <span asp-validation-for="CreditCardNumber" class="text-danger"></span>
                                        </div>
                                    </div> 
                                </div>
                        </div>
                    </div>
                    <br />
                    <div class="form-group">
                        <input class="btn btn-success float-right" type="submit" value="Sign Up" />
                        <a class="btn btn-secondary" asp-controller="Items" asp-action="Index">Cancel</a>
                    </div>
                    <br />
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
    document.getElementById('creditCardNumber').addEventListener('input', function (event) {
    var inputValue = event.target.value;
    var creditCardRegex = /^\d{16}\d{2}\/\d{2}\d{3}$/;

    if (!creditCardRegex.test(inputValue)) {
            event.target.setCustomValidity('Credit Card Number must be in the format CREDIT NUMBER-EXP[MM/YY]-CVV');
        } else {
            event.target.setCustomValidity('');
                }
            });
    </script>
}